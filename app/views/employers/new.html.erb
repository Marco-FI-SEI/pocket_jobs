<div class="signup-container">

<h1 class="page-header">Sign up to get access to the best talent pool on the web!</h1>

<form class="signup-form">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="employer-signup-first-name">First Name</label>
      <input type="text" class="form-control" id="employer-signup-first-name">
    </div>
    <div class="form-group col-md-6">
      <label for="employer-signup-last-name">Last Name</label>
      <input type="text" class="form-control" id="employer-signup-last-name">
    </div>
    <div class="form-group col-md-6">
      <label for="employer-signup-email">Email</label>
      <input type="text" class="form-control" id="employer-signup-email">
    </div>
    <div class="form-group col-md-6">
    <label for="employer-signup-phone">Phone</label>
    <input type="text" class="form-control" id="employer-signup-phone">
    </div>
    <div class="form-group col-md-6">
      <label for="employer-signup-password1">Password</label>
      <input type="password" class="form-control" id="employer-signup-password1" placeholder="Please use a complex password you'll remember!">
    </div>
    <div class="form-group col-md-6">
      <label for="employer-signup-password2">Password</label>
      <input type="password" class="form-control" id="employer-signup-password2" placeholder="Please re-enter your password">
    </div>
    <div class="form-group col-md-6">
      <label for="employer-signup-password1">Industry</label>
      <input type="password" class="form-control" id="employer-signup-password1" placeholder="Please use a complex password you'll remember!">
    </div>
    <div class="form-group col-md-6">
      <label for="employer-signup-password2">Company Size</label>
      <input type="password" class="form-control" id="employer-signup-password2" placeholder="Please re-enter your password">
    </div>
  </div>

  <div class="form-group">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" id="gridCheck">
      <label class="form-check-label" for="gridCheck">
        Keep me signed in
      </label>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Sign up</button>
</form>
</div>
